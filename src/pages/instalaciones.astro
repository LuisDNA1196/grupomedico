---
import Flechader from "../components/icons/flechader.astro";
import Flechaizq from "../components/icons/flechaizq.astro";
import Layout from "../layouts/Layout.astro";



---
<Layout title="instalaciones" description="instalaciones">
    <div class="container mx-auto p-4 ">
        <div class="overflow-hidden relative h-[600px]">
          <div class="flex transition-transform ease-in-out duration-500 transform h-[600px]" id="carousel">
            <div class="w-full flex-shrink-0 carousel-slide h-[500px] ">
              <img src="https://fotografias.lasexta.com/clipping/cmsimages02/2018/12/04/B2472841-6532-460A-8C15-3A831805C6FF/98.jpg?crop=5447,3065,x0,y116&width=1900&height=1069&optimize=high&format=webply" alt="Slide 1" class="w-full h-auto ">
              <div class="bg-black/60 text-white  text-center p-2 absolute bottom-0 w-full opacity-75 ">
                Salas de quimioterapia de ultima generacion
              </div>
            </div>
            <div class="w-full flex-shrink-0 carousel-slide">
              <img src="https://i0.wp.com/imgs.hipertextual.com/wp-content/uploads/2019/02/hipertextual-diseno-oncologia-2019488463.jpeg?fit=1805%2C1206&quality=50&strip=all&ssl=1" alt="Slide 2" class="w-full h-fit">
              <div class="bg-black/60 text-white p-2 absolute bottom-0 w-full opacity-75">
                Alta comodidad
              </div>
            </div>
            <div class="w-full flex-shrink-0 carousel-slide">
              <img src="https://lacronicadesalamanca.com/wp-content/uploads/2017/05/cancer-sala-dia-hospital-quimioterapia-3.jpg" alt="Slide 3" class="w-full h-auto">
              <div class="bg-black/60 text-white p-2 absolute bottom-0 w-full opacity-75">
                Atención personalizada
              </div>
            </div>
            <div class="w-full flex-shrink-0 carousel-slide">
              <img src="https://www.crbgroup.com/wp-content/uploads/2020/04/Lab-Site-Selection-2.jpg" alt="Slide 3" class="w-full h-full">
              <div class="bg-black/60 text-white p-2 absolute bottom-0 w-full opacity-75">
                Laboratorio de alta especialidad
              </div>
            </div>
            
          </div>
          <div class="absolute top-1/2 -translate-y-1/2 flex justify-between w-full px-4">
            <button class="text-black shadow-lg hover:text-white rounded" id="prevButton" onclick="prevSlide()"><Flechaizq class="size-12" /></button>
            <button class="text-black shadow-lg hover:text-white  rounded" id="nextButton" onclick="nextSlide()"><Flechader class="size-12"/></button>
          </div>
        </div>
      </div>
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          const carousel = document.getElementById('carousel');
        
          if (carousel) {
            const slides = document.querySelectorAll('.carousel-slide');
            const totalSlides = slides.length;
            let currentIndex = 0;
        
            function showSlide(index: number) {
              if (carousel) {
                carousel.style.transform = `translateX(${-index * 100}%)`;
              }
            }
        
            function nextSlide() {
              if (carousel) {
                currentIndex = (currentIndex + 1) % totalSlides;
                showSlide(currentIndex);
              }
            }
        
            function prevSlide() {
              if (carousel) {
                currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
                showSlide(currentIndex);
              }
            }
        
            const prevButton = document.getElementById('prevButton');
            const nextButton = document.getElementById('nextButton');
        
            if (prevButton) {
              prevButton.addEventListener('click', prevSlide);
            }
        
            if (nextButton) {
              nextButton.addEventListener('click', nextSlide);
            }
        
            // Cambio automático de imagen cada 4 segundos
            setInterval(function () {
              nextSlide();
            }, 5000);
          }
        });
        </script>
        
        
      
      
  </Layout>

