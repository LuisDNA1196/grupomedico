---

<Layout title="Especialistas" description="Especialistas">
<SectionContainer class=''>
    <h1 class="text-center text-5xl font-bold mt-4 mb-4">Especialistas</h1>

    <div class="">
      {
        ESPECIALISTAS.map(({ name, description, img, title }, index) => (
          <div class=" mb-4 md:m-8  bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <div class="text-center mt-10">
              <h5 class=" m-4 mb-1 text-lg lg:text-4xl font-medium text-gray-900 dark:text-white">{name}</h5>
              <span class="text-md lg:text-2xl text-gray-500 dark:text-gray-400">{title}</span>
            </div>  
            <div class="flex flex-col lg:flex-row items-center p-4 text-center">
              <img class="mb-4 rounded-full size-48 md:size-48 lg:size-56 xl:size-80 mt-4" src={img} alt={name} {title}>
              <span class="m-4 text-left md:text-lg lg:text-xl xl:text-2xl text-gray-900 dark:text-gray-400">{description}</span>
            </div>
          </div>
        ))
      }
      </div>
    
</SectionContainer>
</Layout>